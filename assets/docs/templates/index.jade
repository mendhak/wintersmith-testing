
extends layout

block header
    img(src="images/gps_icon05.png", class="pull-left logo")
    h1
      a(href="http://code.mendhak.com/gpslogger/")= locals.name
    p.description= locals.description
    section.blurb!= "GPSLogger uses the GPS capabilities of your Android phone to log coordinates to GPS format files at regular intervals. This can be particularly useful if you want to geotag your photos after a day out or share your travel route with someone. The purpose of this application is to be battery efficient to save you battery power when abroad and last as long as possible."
    a.button(href="#a1")= "Tour" 
    =" "
    a.button(href="#faq01")= "FAQ"
    =" "   
    a.button(href="#ss01")= "Screenshots" 
    =" "
    a.pull-right(href="https://paypal.me/mendhak/")
      img.pull-right(src="images/Paypal-Donate-Button-Image.png", height="55px")
      =" "    
    a.pull-right(href="https://github.com/mendhak/gpslogger/")
      img.pull-right(src="images/social/GitHub_Logo.png", height="40px")
      =" "
      img.pull-right(src="images/social/GitHub-Mark-64px.png",  height="40px")
    a.pull-right(href="https://play.google.com/store/apps/details?id=com.mendhak.gpslogger")
      img.pull-right(src="https://play.google.com/intl/en_us/badges/images/apps/en-play-badge-border.png", height="50px")
      =" "

block content
  
  each article in articles
    hr(id=article.anchorname)
    section
      div.lead
        != typogr(article.html).typogrify()
      
block prepend footer
  include footer.html
  